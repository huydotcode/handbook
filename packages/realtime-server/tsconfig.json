{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "src",
        "outDir": "dist",
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "noEmit": false,
        "types": ["node", "jest"]
    },
    "references": [{ "path": "../shared" }],
    "include": ["src"],
    "exclude": ["node_modules", "dist"],
    "ts-node": {
        "files": true
    },
    "allowJs": true,
    "checkJs": false
}
